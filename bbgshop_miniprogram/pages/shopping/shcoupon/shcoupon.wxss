}
.List_item_left{
  position: absolute;
  /* border: 1px solid black; */
  height: 168rpx;
  width: 30vw;
  left: 0;
  top: 0;
  /* float: left; */
  background:#5394d4;
  background-image:-webkit-gradient(linear,45% 0,0 100%,from(transparent), color-stop(0.5,transparent),color-stop(0.5,#e5e5e5),to(#e5e5e5)), -webkit-gradient(linear,50% 0,0% 100%,from(transparent), color-stop(0.75,transparent),color-stop(0.75,#e5e5e5),to(#e5e5e5));
  background-size:10px 6px;
  background-repeat:repeat-y;
  background-position:0 100%; 
}
.List_item_right {
  position: absolute;
  /* border: 1px solid black;  */
  height: 168rpx;
  width: 64vw;
  right: 0;
  top: 0;
}
